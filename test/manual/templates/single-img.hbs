{{> top title="Single image"}}

	<button type="button" class="string-done">Load image file (param as string)</button>
	<button type="button" class="array-done">Load image file (param as array)</button>
	<button type="button" class="string-done-recache">Load image file, no cache (param as string)</button>
	<button type="button" class="array-done-recache">Load image file, no cache (param as array)</button>

	<button type="button" class="string-fail">Load non-existent image file (param as string)</button>
	<button type="button" class="array-fail">Load non-existent image file (param as array)</button>
	<button type="button" class="string-fail-recache">Load non-existent image file, no cache (param as string)</button>
	<button type="button" class="array-fail-recache">Load non-existent image file, no cache (param as array)</button>

	<div class="sandbox"></div>

	<script>

		$('.string-done').on('click', function () {

			$.kist.loader
				.load('assets/img/test-01.jpg')
				.done(function ( img ) {
					console.log( 'Done' );
					console.log( arguments );
					$(img[0]).appendTo('.sandbox');
				})
				.fail(function ( img ) {
					console.log( 'Fail' );
					console.log( arguments );
				});

		});

		$('.array-done').on('click', function () {

